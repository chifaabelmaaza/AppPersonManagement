<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="494.0" prefWidth="790.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.emsi.applicationgestionpersonne.view.AddFormController">
   <BorderPane prefHeight="494.0" prefWidth="790.0">
      <center>
          <GridPane alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">
              <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <font>
                      <Font name="Calibri" size="14.0" />
                  </font></Label>
              <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
              <Label text="Age" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <font>
                      <Font name="Calibri" size="14.0" />
                  </font></Label>
              <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
              <Label text="Gender" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font></Label>
              <ChoiceBox fx:id="genderChoiceBox" prefHeight="25.0" prefWidth="174.0" style="-fx-background-color: #D3E7DF;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                  <items>
                      <FXCollections fx:factory="observableArrayList">
                          <String fx:value="Male" />
                          <String fx:value="Female" />
                      </FXCollections>
                  </items>
              </ChoiceBox>
      
              <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="3">
                  <font>
                      <Font name="Calibri" size="14.0" />
                  </font></Label>
              <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      
              <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="4">
                  <font>
                      <Font name="Calibri" size="14.0" />
                  </font></Label>
              <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      
              <Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="5">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font></Label>
              <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      
              <Label text="Date of Birth" GridPane.columnIndex="0" GridPane.rowIndex="6">
                  <font>
                      <Font name="Calibri" size="14.0" />
                  </font></Label>
              <DatePicker fx:id="dateNaissPicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      
              <Label text="CIN" GridPane.columnIndex="0" GridPane.rowIndex="7">
               <font>
                  <Font name="Calibri" size="14.0" />
               </font></Label>
              <TextField fx:id="cinField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
          </GridPane>
      </center>
      <bottom>
   
              <Button onAction="#addPerson" prefHeight="30.0" prefWidth="241.0" style="-fx-background-color: #6D908F;" text="Save" textFill="#fffefe" BorderPane.alignment="CENTER">
            <font>
               <Font name="Calibri Bold Italic" size="18.0" />
            </font>
         </Button>
      </bottom>
      <top>
         <Label alignment="CENTER" contentDisplay="CENTER" text="Enter the new person infos using the form bellow" BorderPane.alignment="CENTER">
            <font>
               <Font name="Calibri Bold Italic" size="30.0" />
            </font>
         </Label>
      </top>
      <padding>
         <Insets bottom="25.0" top="25.0" />
      </padding>
   </BorderPane>
</AnchorPane>
